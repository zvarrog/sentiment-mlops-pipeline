SEED=42

# Пути/Директории
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
MODEL_DIR=artefacts
MODEL_ARTEFACTS_DIR=artefacts/model_artefacts
DRIFT_ARTEFACTS_DIR=artefacts/drift_artefacts

# Kaggle
# Укажите путь к kaggle.json локально через переменную среды KAGGLE_JSON или копируйте файл в корень проекта.
KAGGLE_DATASET=bharadwaj6/kindle-reviews
CSV_NAME=kindle_reviews.csv
JSON_NAME=kindle_reviews.json
KAGGLE_JSON=./kaggle.json

# Флаги
FORCE_DOWNLOAD=0
FORCE_PROCESS=0
FORCE_TRAIN=0

# Дрейф и валидация
INJECT_SYNTHETIC_DRIFT=0
RUN_DRIFT_MONITOR=0
RUN_DATA_VALIDATION=1
SKIP_DATA_VALIDATION=0

# Обработка
PER_CLASS_LIMIT=35000
HASHING_TF_FEATURES=6144
SHUFFLE_PARTITIONS=32
MIN_DF=3
MIN_TF=2

# Оптимизация памяти
MEMORY_WARNING_MB=3072
TFIDF_MAX_FEATURES_MIN=2000
TFIDF_MAX_FEATURES_MAX=6000
TFIDF_MAX_FEATURES_STEP=500
FORCE_SVD_THRESHOLD_MB=4000

# Обучение
OPTUNA_N_TRIALS=10
OPTUNA_STORAGE=postgresql+psycopg2://admin:admin@postgres:5432/optuna
STUDY_BASE_NAME=kindle_optuna
N_FOLDS=1
TRAIN_DEVICE=cpu  # "cpu" или "cuda"
EARLY_STOP_PATIENCE=8
OPTUNA_TIMEOUT_SEC=2400
MIN_TRIALS_BEFORE_EARLY_STOP=15
DISTILBERT_TIMEOUT_SEC=1800
# DistilBERT гиперпараметры
DISTILBERT_MIN_EPOCHS=2
DISTILBERT_MAX_EPOCHS=8
DISTILBERT_EARLY_STOP_PATIENCE=3

# MLflow
MLFLOW_EXPERIMENT_NAME=kindle_experiment
MLFLOW_FORCE_LOCAL=1
MLFLOW_TRACKING_URI=

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_INCLUDE_TIMESTAMP=true

# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin

# Airflow
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Spark ресурсы
SPARK_DRIVER_MEMORY=6g
SPARK_EXECUTOR_MEMORY=6g
SPARK_NUM_CORES=4

# Дополнительно
OPTUNA_TOPK_EXPORT=20
DRIFT_IGNORE_COLS=
# Режим выполнения DAG: standard (последовательно) или parallel (параллельно по моделям)
EXECUTION_MODE=standard
# Флаг параллельного обучения (bool: 0|1)
PARALLEL=0
